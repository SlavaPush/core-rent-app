<div class="container">
  <div class="row">
    <form action="/add/new" name="addPost" method="POST">
      <div class="addPost">
        <div class="input-field col s8 offset-s2">
          <input id="icon_prefix" type="text" class="validate" name="titleName">
          <label for="icon_prefix">Введите название</label>
        </div>
        <div class="input-field col s8 offset-s2">
          <textarea id="icon_prefix2" class="materialize-textarea" name="contentName"></textarea>
          <label for="icon_prefix2">Описание</label>
        </div>
        <div class="input-field col s8 offset-s2">
          <input id="icon_telephone" type="tel" class="validate" name="numberName">
          <label for="icon_telephone">Номер телефона</label>
        </div>
        <div class="input-field col s8 offset-s2">
          <input type="text" name="priceNumber">
          <label>Стоимость</label>
        </div>
        <div class="input-field col s8 offset-s2">
          <input id="icon_prefix3" type="text" class="validate" name="addPhotolist">
