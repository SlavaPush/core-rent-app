{{#each bids}}
  {{#if show}}
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">{{ads}}</span>
            <p>Дата создания: {{meetengDate}}</p>
            {{#if rentStatus}}
            <h3>Объект сдан</h3>
            {{/if}}
            {{#if meetingStatus}}
            <h3>Встреча назначена</h3>
            {{/if}}
            {{#if ads}}
            <p>{{ads}}</p>
            {{/if}}
            {{#if person}}
            <p>Автор: {{person}}</p>
            {{/if}}
            <p>Статус: {{status}}</p>
            {{#if comment}}
            <p>{{comment}}</p>
            {{/if}}
          </div>
          <div class="card-action">
            <form id="accept" method="get" action="/bid/{{id}}/accept">
              <input type="submit" class="btn waves-effect waves-light" value="accept">
            </form>
            <form id="decline" method="get" action="/bid/{{id}}/decline" style="display: inline">
              <input type="submit" class="btn waves-effect waves-light" value="decline">
            </form>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
{{/each}}
