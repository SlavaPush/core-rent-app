{{#each bids}}
  {{#if show}}
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">{{ads}}</span>
            <p>Date of miting: {{meetengDate}}</p>
            <p>Person: {{person}}</p>
            <p>Status: {{status}}</p>
            <p>{{comment}}</p>
          </div>
          <div class="card-action">
            <form method="get" action="/requests/{{id}}/accept">
              <input type="submit" class="btn waves-effect waves-light" value="accept">
            </form>
            <form method="get" action="/requests/{{id}}/decline">
              <input type="submit" class="btn waves-effect waves-light" value="decline">
            </form>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
{{/each}}
