{{#each flat}}
<div class="postMain">
  <div>
    <h4>{{name}}</h4>
  </div>
  <div>{{comment}}</div>
  <div>{{number}}</div>
  <div>{{price}}</div>
  <div><button class="btn btn-primary modal-trigger" data-target="modal1" type="button">Откликнуться</button></div>
</div>
<div id="modal1" class="modal">
  <div class="modal-content">
    <form action="alllist/confirm" name="posts" method="POST">
      <div class="windowAdd">
        <div class="input-field col s12">
          <input id="icon_telephone" type="tel" class="validate">
          <label for="icon_telephone">Номер телефона</label>
        </div>
        <div><input type="datetime-local" placeholder="Выберите удобную Вам дату"></div>
        <div class="input-field col s12">
          <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
          <label for="icon_prefix2">Описание</label>
        </div>
        <div><button class="btn btn-primary" type="submit">Отправить заявку</button></div>
      </div>
    </form>
  </div>
</div>
{{/each}}
