{{!-- <form action="/adv/bid" name="allPosts" method="POST"> --}}
{{!-- <div class="container">
  <div class="row"> --}}
{{#each house}}
<div class="postMain">
  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src={{this.photo}}>
    </div>
    <div class="card-content">
      <span id="btnSpan" class="card-title activator grey-text text-darken-4">{{this.title}}<i
          class="material-icons right">...</i></span>
      {{#if @root.isAuth}}
      <a href="#openModal"><button class="btn btn-primary" type="button">Откликнуться</button></a>
      <button id="{{_id}}" class="btn waves-effect waves-light" type="button"><a
          href="/adv/edit/{{_id}}">Редактировать</a></button>
      <button id="{{_id}}" class="btn waves-effect waves-light" type="button"><a
          href="/adv/delete/{{_id}}">Удалить</button>
      {{/if}}
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">{{this.price}}<i
          class="material-icons right">Закрыть</input></span>
      <p>{{this.content}}</p>
      <p>Телефон для связи: {{this.number}}</p>
    </div>
  </div>
</div>
<div id="openModal" class="modalDialog">
  <div>
    <a href="#close" title="Закрыть" class="close">X</a>
    <p>Оставить заявку на объявление:</p>
    <h6>{{this.title}}</h6>
    <div class="windowAdd">
      <div class="input-field col s6">
        <input id="icon_telephone" type="tel" class="validate" name="numberName">
        <label for="icon_telephone">Номер телефона</label>
      </div>
      <div><input type="datetime-local" placeholder="Выберите удобную Вам дату" name="dateName"></div>
      <div class="input-field col s6">
        <textarea id="" class="materialize-textarea"></textarea name="commentName">
          <label for="icon_prefix2">Комментарий</label>
        </div>
        <div><button class="btn btn-primary" type="submit">Отправить заявку</button></div>
      </div>
    </div>
  </div>
{{/each}}
{{!-- </div> --}}

{{!-- </form> --}}
