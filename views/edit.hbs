<div class="container">
  <div class="row">
    <form action="/adv/edit/go/{{adv._id}}" name="addPost" method="POST">
      <div class="addPost">
        <div class="input-field col s8 offset-s2">
          <input id="icon_prefix" type="text" class="validate" name="title" value="{{adv.title}}">
          <label for="icon_prefix"></label>
        </div>
        <div class="input-field col s8 offset-s2">
          <input id="icon_prefix2" class="materialize-textarea" name="content" value="{{adv.content}}"></input>
          <label for="icon_prefix2"></label>
        </div>
        <div class="input-field col s8 offset-s2">
          <input id="icon_telephone" type="tel" class="validate" name="number" value="{{adv.number}}">
          <label for="icon_telephone"></label>
        </div>
        <div class="input-field col s8 offset-s2">
          <input type="text" name="priceNumber" value="{{adv.price}}">
          <label></label>
        </div>
        <div class="input-field col s8 offset-s2">
          <input id="icon_prefix3" type="text" class="validate" name="photo" value="{{adv.photo}}">
          <label for=" icon_prefix3"></label>
        </div>
        <div> <button class="btn waves-effect waves-light" type="submit" name="action">Редактировать
            <i class="near_me"></i>
          </button></div>
      </div>
    </form>
  </div>
</div>
